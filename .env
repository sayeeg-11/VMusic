# Jamendo API Configuration
VITE_JAMENDO_CLIENT_ID=<YOUR_JAMENDO_CLIENT_ID>

# Spotify API Configuration
VITE_SPOTIFY_CLIENT_ID=<YOUR_SPOTIFY_CLIENT_ID>
# Note: SPOTIFY_CLIENT_SECRET is set in Vercel/Netlify environment (backend-only, never VITE_ prefix)
VITE_SPOTIFY_REDIRECT_URI=<YOUR_REDIRECT_URI>

# YouTube API Configuration
VITE_YOUTUBE_API_KEY=<YOUR_YOUTUBE_API_KEY>

# Google OAuth Configuration (for YouTube Playlists Import)
# Note: OAuth credentials are managed by Firebase Authentication
# Make sure your Google OAuth project matches Firebase project (vmusic-7806a)

# Firebase Configuration
VITE_FIREBASE_API_KEY=<YOUR_FIREBASE_API_KEY>
VITE_FIREBASE_AUTH_DOMAIN=<YOUR_PROJECT_ID>.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=<YOUR_PROJECT_ID>
VITE_FIREBASE_STORAGE_BUCKET=<YOUR_PROJECT_ID>.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=<YOUR_SENDER_ID>
VITE_FIREBASE_APP_ID=<YOUR_APP_ID>
VITE_FIREBASE_MEASUREMENT_ID=<YOUR_MEASUREMENT_ID>

# EmailJS Configuration
VITE_EMAILJS_USER_ID=<YOUR_EMAILJS_USER_ID>
VITE_EMAILJS_SERVICE_ID=<YOUR_SERVICE_ID>
VITE_EMAILJS_TEMPLATE_ID=<YOUR_TEMPLATE_ID>

# MongoDB Configuration
# Note: MONGODB_URI is set in Vercel/Netlify environment variables (backend-only)
# Local development uses production API endpoint

# Backend API URL
# Local development: Point to Vercel production (serverless functions don't run locally without Vercel CLI)
# Vercel production: https://your-app.vercel.app/api
VITE_API_BASE_URL=<YOUR_API_BASE_URL>